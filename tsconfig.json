{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "baseUrl": "src",
    // 폴더 구조가 잡히면 수정 필요
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@api/*": ["api/*"],
      "@ui/*": ["components/ui/*"],
      "@icons/*": ["assets/icons/*"],
      "@images/*": ["assets/images/*"],
      "@fonts/*": ["assets/fonts/*"]
    }
  }
}
